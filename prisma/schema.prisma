datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "../generated"
}

model GuildConfig {
  guildId                     String @id
  metroNetworkStatusChannelId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  lineStatusMessages LineStatusMessage[]

  @@map("guild_configs")
}

model LineStatusMessage {
  guildId   String
  channelId String
  messageId String @id
  lineId    LineId
  infoHash  String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  guildConfig GuildConfig @relation(fields: [guildId], references: [guildId])

  @@map("line_status_messages")
}

enum LineId {
  l1
  l2
  l3
  l4
  l4a
  l5
  l6
}

model StationDetails {
  stationId    String       @id
  lineId       LineId
  stationName  String
  expressRoute ExpressRoute
  features     Json?

  @@map("station_details")
}

enum ExpressRoute {
  common
  green
  red
}
